@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="icon" type="image/png" href="~/images/favicon.png">
<link href="~/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
<link href="~/2.0/LineIcons.css" rel="stylesheet" type="text/css" />
<link href="~/css/style.css" rel="stylesheet" type="text/css" />

            <div class="row">
                <div class="col-md-5">
                    <section>

                        <form id="account" method="post">
                            <h4 class="text-center mb-4">Sign in your account</h4>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" value="hello@example.com" />
                                <label asp-for="Input.Email" class="mb-1"><strong>Email</strong></label>
                                <span asp-validation-for="Input.Email" ></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="mb-1"><strong>Password</strong></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                               @* <span class="show-pass eye">

                                    <i class="fa fa-eye-slash"></i>
                                    <i class="fa fa-eye"></i>

                                </span>*@

                            </div>
                            <div class="form-row d-flex justify-content-between mt-4 mb-2">
                                <div class="form-group">
                                    <div class="form-check custom-checkbox ms-1">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" style="margin-top: -1px;" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="btn btn-primary btn-block mb-3">Log in</button>
                            </div>
                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>

                </div>
                <div class="col-md-6 offset-md-1">
                    <section>
                        <img src="~/images/Screenshot 2023-09-01 112304.png" style="width: 500px; height: 600px" />
                    </section>
                </div>
            </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
