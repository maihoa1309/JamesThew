@using Project3.Repository;
@inject IRecipeRepository recipeRepository;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var recipes = await recipeRepository.GetAllAsync();
}

<div class="content-body ">
    <!-- row -->
    <div class="container-fluid">
        <div class="form-head d-flex mb-3 mb-lg-5 align-items-start">
           <div class="me-auto d-none d-lg-block">
				<a class="text-primary d-flex align-items-center mb-3 font-w500" href="index-2.html">
				<svg class="me-3" width="24" height="12" viewBox="0 0 24 12" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M0.274969 5.14888C0.27525 5.1486 0.275484 5.14827 0.275812 5.14799L5.17444 0.272997C5.54142 -0.0922061 6.135 -0.090847 6.5003 0.276184C6.86555 0.643168 6.86414 1.23675 6.49716 1.60199L3.20822 4.87499H23.0625C23.5803 4.87499 24 5.29471 24 5.81249C24 6.33027 23.5803 6.74999 23.0625 6.74999H3.20827L6.49711 10.023C6.86409 10.3882 6.8655 10.9818 6.50025 11.3488C6.13495 11.7159 5.54133 11.7171 5.17439 11.352L0.275764 6.47699C0.275483 6.47671 0.27525 6.47638 0.274921 6.4761C-0.0922505 6.10963 -0.0910778 5.51413 0.274969 5.14888Z" fill="#EA4989"/>
				</svg>
				Back</a>
				<a class="mb-0 text-secondary fs-18 font-w500" href="#">Review  /</a>
				<a class="mb-0 font-w500 fs-18" href="#"> Customer Review </a>
			</div>
            <div class="input-group search-area ms-auto d-md-flex align-items-center d-inline-flex">
				<input type="text" class="form-control" placeholder="Search here">
				<div class="input-group-append">
					<a href="javascript:void" class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></a>
				</div>
			</div>
        </div>
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive ">
                    <table class="table order-request">
                        <tbody>
                            @foreach(var recipe in recipes)
                            {
                                <tr>
                                    <td style="width: 45%">
                                        <div class="media align-items-center">
                                            <img class="me-3 img-fluid rounded-circle" width="75" src="" >
                                            <div class="media-body">
                                                <h5 class="mt-0 mb-2"><a href="ecom-product-detail.html" class="text-black">@recipe.Title</a></h5>
                                                <p class="mb-0 text-primary">@recipe.Id</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="width: 40%">
                                        <h5 class="mb-2 text-black wspace-no">James Thew</h5>
                                    </td>
                                    <td style="width: 10%">
                                        <div class="d-flex align-items-center">
                                            <a class="btn btn-danger light btn-sm" href="javascript:;">See detail</a>
                                        </div>
                                    </td>
                             
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="card-footer border-0 pt-0 text-center">
                        <a href="ecom-product-list.html" class="btn-link">View More &gt;&gt;</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

