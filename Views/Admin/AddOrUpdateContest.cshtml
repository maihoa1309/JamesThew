@model int
@using Project3.Repository;
@inject IContestRepository contestRepository;
@inject ICategoryRepository categoryRepository;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var categories = await categoryRepository.SortNameByASCAsync();
}
@section Styles{
    <link href="~/vendor/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/clockpicker/css/bootstrap-clockpicker.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/jquery-asColorPicker/css/asColorPicker.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/pickadate/themes/default.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/pickadate/themes/default.date.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css" />
    <link href="~/vendor/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
    <style>
        #image-container {
            display: flex;
            flex-wrap: wrap;
        }

        #image-container div {
            position: relative;
            margin: 10px;
        }

        #image-container img {
            width: 100px;
            height: 100px;
            /*width: 100%;*/
            -webkit-transition: all 0.5s;
            -ms-transition: all 0.5s;
            transition: all 0.5s;
        }

        #image-container button {
            position: absolute;
            top: 0;
            right: 0;
            padding: 5px;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 50%; /* Thêm thuộc tính border-radius để làm tròn nút */
            width: 24px; /* Đặt kích thước chiều rộng */
            height: 24px; /* Đặt kích thước chiều cao */
            display: flex; /* Sử dụng flexbox để căn giữa */
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center;
        }
    </style>

    
}
<div class="content-body ">
    <!-- row -->
    <div class="container-fluid">
        <div class="me-auto d-none d-lg-block mb-3">
            <a class="text-primary d-flex align-items-center mb-3 font-w500" href="/Admin/Index">
                <svg class="me-3" width="24" height="12" viewBox="0 0 24 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0.274969 5.14888C0.27525 5.1486 0.275484 5.14827 0.275812 5.14799L5.17444 0.272997C5.54142 -0.0922061 6.135 -0.090847 6.5003 0.276184C6.86555 0.643168 6.86414 1.23675 6.49716 1.60199L3.20822 4.87499H23.0625C23.5803 4.87499 24 5.29471 24 5.81249C24 6.33027 23.5803 6.74999 23.0625 6.74999H3.20827L6.49711 10.023C6.86409 10.3882 6.8655 10.9818 6.50025 11.3488C6.13495 11.7159 5.54133 11.7171 5.17439 11.352L0.275764 6.47699C0.275483 6.47671 0.27525 6.47638 0.274921 6.4761C-0.0922505 6.10963 -0.0910778 5.51413 0.274969 5.14888Z" fill="#EA4989" />
                </svg>
                Back
            </a>
            <a class="mb-0 text-secondary fs-18 font-w500" href="#">Contest  /</a>
            <a class="mb-0 font-w500 fs-18" href="#"> Save contest </a>
        </div>
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"> Contest </h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form class="saveContest">
                        <input type="hidden" name="_token" value="ML92rdCjbEmTftVXgNyoQXBHnoqjfV95zZ8HN7me">
                        <input type="hidden" id="_id" value="@Model" />
                        <div class="row">
                            <div class="mb-3 col-md-4">
                                <label class="form-label">Contest title:</label>
                                <input type="text" class="form-control" name="title" id="title" value="">
                            </div>
                            <div class="mb-3 col-md-8">
                                <label class="form-label">Description about contest:</label>
                                <textarea class="form-control" name="description" id="description"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-3">
                                <div class="mb-4">
                                    <label class="">Categories</label> 
                                    <select id="single-select">
                                        @foreach(var cate in categories)
                                        {
                                            @*@(recipeDetail.Recipe.CategoryId == cate.Id ? "selected" : "")*@
                                            <!option value="@cate.Id">@cate.Name</!option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div >
                                    <label>Start date:</label>
                                    <input name="datepicker" class="datepicker-default form-control" id="startDate">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div>
                                    <label>End date:</label>
                                    <input name="datepicker" class="datepicker-default form-control" id="endDate">
                                </div>
                            </div>
                        </div>
                          <div class="row">
                            <span>Share photo of your recipe</span>
                            <div class="mb-3 col-xl-4 col-lg-4">
                                <input class="form-control" type="file" multiple id="formFile" name="img1" accept="image/jpeg, image/png, image/gif">
                            </div>                           
                        </div>
                        <div id="image-container">
                            @*@if (!string.IsNullOrEmpty(recipeDetail.Recipe.Img))
                            {
                                var splited = recipeDetail.Recipe.Img.Split(',');
                                foreach(var item in splited)
                                {
                                    <div><img src="/@item"><button type="button">x</button></div>
                                }
                            }*@
                        </div>
                        <button type="submit" class="btn btn-primary" id="submit" style="float: right;">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
