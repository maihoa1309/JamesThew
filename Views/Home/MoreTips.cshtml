@{
    Layout = "~/Views/Shared/_Layoutweb.cshtml";
}
@section css{
    <link rel="stylesheet" href="~/css/style.css" />
}

<section class="single-page-recipe spad">
    <div class="recipe-top">
        <div class="container-fluid">
            <div class="recipe-title">
                <h2 id="recipeTitle"></h2>
                <ul class="tags">
                </ul>
            </div>
            <img id="imgTipDetail" src="" alt="">
        </div>
        <div class="col-lg-7">
            <div class="recipe-right">
                <div class="recipe-desc">
                    <h3>Description</h3>
                    <p id="Description"></p>
                </div>
                <div class="instruction-list">
                    <h3>Instructions</h3>
                    <ul>
                        <li id="Intro">
                        </li>
                    </ul>
                </div>
                <div class="notes">
                    <h3>Notes</h3>
                    <div class="notes-item">
                        <span></span>
                        <p id="note"></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section script{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var selectedTip = localStorage.getItem('selectedTip');

            if (selectedTip) {
                selectedTip = JSON.parse(selectedTip);
                // Sử dụng selectedTip ở đây
                document.getElementById('recipeTitle').textContent = selectedTip.title;
                document.getElementById('Description').textContent = selectedTip.content;
                document.getElementById('imgTipDetail').src = selectedTip.imgUrl;
                document.getElementById('note').textContent = selectedTip.note;
                document.getElementById('Intro').textContent = selectedTip.Intro;
            }
        });
    </script>
}

